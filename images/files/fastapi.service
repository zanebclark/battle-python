[Unit]
Description=Battlesnakes FastAPI
After=network.target

[Service]
User=ubuntu
WorkingDirectory=/home/ubuntu/battle-python
LimitNOFILE=4096
ExecStart=~/.local/bin/poetry run gunicorn battle_python.main:api --workers 2 -k uvicorn.workers.UvicornWorker --bind unix:battle-python.sock --error-logfile /home/ubuntu/battle-python/error_log.txt
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target
