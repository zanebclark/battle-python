{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${cwd}"},
            "python": "${workspaceFolder}/.venv/Scripts/python.exe"
        }
    ]
}
